<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7D9"
    tools:context=".MindMapTemplatesActivity">

    <TextView
        android:id="@+id/notepadTitle"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:clickable="false"
        android:contentDescription="Notepad title, shown in all notepad screens "
        android:gravity="center"
        android:text="Notepad"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextSizeCheck" />
    <TextView
        android:id="@+id/choose_mind_map_template_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notepadTitle"
        android:text="Mind Map Templates"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="11dp"/>
        
    <androidx.cardview.widget.CardView
        android:id="@+id/bubble_maps"
        android:layout_width="242dp"
        android:layout_height="172dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/choose_mind_map_template_title"
        android:layout_marginTop="20dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/normalMindMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAlignBottom="false"
                android:src="@drawable/mind_maps" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="660dp"
        app:backgroundTint="#FFF271"
        app:srcCompat="@drawable/back_arrow" />
</RelativeLayout>
