<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PomodoroOptionsActivity">

    <ScrollView
        android:id="@+id/PomodoroScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFE8E8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFE8E8"
            android:orientation="vertical"
            tools:context=".MainActivity">


            <androidx.cardview.widget.CardView
                android:id="@+id/optionClassic"
                android:layout_width="370dp"
                android:layout_height="100dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#FFA7A7"
                android:foregroundGravity="center_horizontal"
                app:cardCornerRadius="9dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pomodoroWelcome">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13dp">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/classicStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="50dp"
                    android:text="Study Duration: 25 minutes"
                    android:translationX="10dp" />

                <TextView
                    android:id="@+id/classicBreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="50dp"
                    android:text="Break Duration: 5 minutes"
                    android:translationX="10dp"
                    android:translationY="20dp" />

                <Button
                    android:id="@+id/questionnairebutton"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_gravity="right|center_vertical"
                    android:backgroundTint="#AA0000"
                    android:text="SELECT"
                    android:textColorHint="@color/white"
                    android:textSize="12sp"
                    android:translationX="-10dp"
                    app:cornerRadius="9dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Classic Pomodoro"
                    android:translationX="17dp"
                    android:translationY="20dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/optionExtreme"
                android:layout_width="370dp"
                android:layout_height="100dp"
                android:layout_margin="13dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#FFA7A7"
                android:duplicateParentState="false"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                app:cardCornerRadius="9dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/optionExtended">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="50dp"
                    android:text="Study Duration: 60 minutes"
                    android:translationX="10dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="50dp"
                    android:text="Break Duration: 20 minutes"
                    android:translationX="10dp"
                    android:translationY="20dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_gravity="right|center_vertical"
                    android:backgroundTint="#AA0000"
                    android:text="SELECT"
                    android:textSize="12sp"
                    android:translationX="-10dp"
                    app:cornerRadius="9dp" />

                <TextView
                    android:id="@+id/textView90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Extreme Pomodoro"
                    android:translationX="17dp"
                    android:translationY="20dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/optionExtended"
                android:layout_width="370dp"
                android:layout_height="100dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#FFA7A7"
                android:foregroundGravity="center_horizontal"
                app:cardCornerRadius="9dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/optionClassic">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="50dp"
                    android:text="Study Duration: 40 minutes"
                    android:translationX="10dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="50dp"
                    android:text="Break Duration: 10 minutes"
                    android:translationX="10dp"
                    android:translationY="20dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_gravity="right|center_vertical"
                    android:backgroundTint="#AA0000"
                    android:text="SELECT"
                    android:textSize="12sp"
                    android:translationX="-10dp"
                    app:cornerRadius="9dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Extended Pomodoro"
                    android:translationX="17dp"
                    android:translationY="20dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pomodoroTitle"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#AA0000"
                app:cardCornerRadius="9dp"
                app:layout_constraintBottom_toTopOf="@+id/pomodoroWelcome"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="1dp"
                        android:text="Pomodoro"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pomodoroWelcome"
                android:layout_width="370dp"
                android:layout_height="140dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#AA0000"
                android:foregroundGravity="center_horizontal"
                app:cardCornerRadius="9dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pomodoroTitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="306dp"
                        android:layout_height="105dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="Welcome to studying with Pomodoro timer! Please pick an option to study with!"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/backButtonShop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/lightpurple"
        android:clickable="true"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightred"
            app:srcCompat="@drawable/return_arrow" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/addPomodoro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:background="@color/lightred"
        android:clickable="true"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightred"
            app:srcCompat="@drawable/plus_icon" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>