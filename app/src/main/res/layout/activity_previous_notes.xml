<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7D9"
    tools:context=".PreviousNotesActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/new_note"
        android:layout_width="150dp"
        android:layout_height="203dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAlignBottom="false"
                android:scaleType="centerCrop"
                android:src="@drawable/new_note" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/eng_102"
        android:layout_width="150dp"
        android:layout_height="203dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/eng_102" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_note"
        android:layout_alignStart="@+id/new_note"
        android:layout_alignEnd="@+id/new_note"
        android:layout_marginStart="22dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="22dp"
        android:gravity="center"
        android:text="New Note" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eng_102"
        android:layout_alignStart="@+id/eng_102"
        android:layout_alignEnd="@+id/eng_102"
        android:layout_marginStart="22dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="22dp"
        android:gravity="center"
        android:text="ENG 102" />

    <TextView
        android:id="@+id/notepadTitle"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:clickable="false"
        android:contentDescription="Notepad title, shown in all notepad screens "
        android:gravity="center"
        android:text="Notepad"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="660dp"
        android:clickable="true"
        app:backgroundTint="#FFF271"
        app:srcCompat="@drawable/back_arrow" />


</RelativeLayout>
</ScrollView>